{
	"variables": {
		"base_image": "okffi/maas-siri",
		"maas_image": "okffi/maas-siri"
	},
	"builders": [
		{
				"type": "docker",
				"image": "{{user `base_image`}}",
				"commit": true,
				"pull": false
		}
	],
	"provisioners": [
				{
					"type": "file",
					"source": "server",
					"destination": "/maas"
				},
				{
						"type": "shell",
						"inline": [
								"/etc/init.d/postgresql start",
								"sudo -u postgres psql -d sujuvuusnavigaattori -a -f /maas/server/update.sql"
						]
				}
	]
}
